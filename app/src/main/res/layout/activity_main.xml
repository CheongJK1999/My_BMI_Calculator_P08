<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/editTextW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="weight" />

    <EditText
        android:id="@+id/editTextH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/calculate" />

        <Button
            android:id="@+id/buttonReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reset_data" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewOP1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/last_calculated_date" />

    <TextView
        android:id="@+id/textViewOP2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/last_calculated_bmi" />

    <TextView
        android:id="@+id/textViewOP3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>